#!/bin/bash
# extension に含まれる manifest.json のバージョンアップ
# 要: jq
set -euo pipefail
cd -- "$(dirname -- "$0")/.."
export VIDEOMARK_VERSION=${VIDEOMARK_VERSION:-$(node -pe 'require("./package.json").version')}
version() {
  echo "$(jq .version=env.VIDEOMARK_VERSION public/manifest.json)" \
    >public/manifest.json
  echo "$(jq .version=env.VIDEOMARK_VERSION public/manifest-firefox.json)" \
    >public/manifest-firefox.json
  echo "${VIDEOMARK_VERSION}"
}
version
git add .
