{
  "type": "module",
  "name": "videomark",
  "version": "3.0.2",
  "repository": "git@github.com:videomark/videomark.git",
  "license": "Apache-2.0",
  "private": true,
  "packageManager": "pnpm@8.15.5",
  "scripts": {
    "build": "MODE=production vite build",
    "build:watch": "MODE=production vite build --watch",
    "build-safari": "MODE=production vite build && MODE=production bin/build-safari",
    "build-dev": "MODE=development vite build",
    "test": "npm-run-all test:*",
    "test:e2e": "playwright test",
    "test:unit": "vitest run",
    "format": "prettier --plugin prettier-plugin-svelte --write .",
    "lint": "npm-run-all lint:*",
    "lint:cspell": "cspell --no-progress",
    "lint:svelte": "svelte-check --compiler-warnings 'missing-custom-element-compile-options:ignore'",
    "lint:prettier": "prettier --check --plugin prettier-plugin-svelte .",
    "lint:eslint": "eslint .",
    "lint:stylelint": "stylelint '**/*.{css,scss,svelte}'",
    "lint-report": "eslint --output-file eslint_report.json --format json --ext .js,.jsx ."
  },
  "devDependencies": {
    "@playwright/test": "^1.42.1",
    "@sveltejs/vite-plugin-svelte": "^3.0.2",
    "archiver": "^7.0.1",
    "cspell": "^8.6.1",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-svelte": "^2.35.1",
    "npm-run-all2": "^6.1.2",
    "postcss": "^8.4.38",
    "postcss-html": "^1.6.0",
    "prettier": "^3.2.5",
    "prettier-plugin-svelte": "^3.2.2",
    "sass": "^1.72.0",
    "stylelint": "^16.3.1",
    "stylelint-config-recommended-scss": "^14.0.0",
    "stylelint-scss": "^6.2.1",
    "svelte": "^4.2.12",
    "svelte-check": "^3.6.8",
    "svelte-i18n": "^4.0.0",
    "svelte-preprocess": "^5.1.3",
    "vite": "^5.2.7",
    "vitest": "^1.4.0"
  },
  "dependencies": {
    "@sveltia/ui": "^0.10.7",
    "@videomark/sparkline": "github:videomark/sparkline",
    "m3u8-parser": "^7.1.0",
    "msgpack-lite": "^0.1.26",
    "uuid": "^9.0.1"
  }
}
