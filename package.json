{
  "type": "module",
  "name": "videomark",
  "version": "2.0.0",
  "repository": "git@github.com:videomark/videomark.git",
  "license": "Apache-2.0",
  "private": true,
  "packageManager": "pnpm@8.3.1",
  "scripts": {
    "build": "bin/build",
    "build:watch": "MODE=production vite build --watch --outDir dist/production",
    "build-safari": "bin/build && bin/build-safari",
    "build-android": "bin/build && bin/build-android",
    "test": "pnpm e2e",
    "e2e": "run-s build e2e:*",
    "e2e:extension": "pnpm --filter @videomark/e2e-test test",
    "format": "prettier --plugin-search-dir . --write .",
    "lint": "npm-run-all lint:*",
    "lint:prettier": "prettier --check --plugin-search-dir=. .",
    "lint:eslint": "eslint .",
    "lint:stylelint": "stylelint '**/*.{css,scss,svelte}'",
    "lint-report": "eslint --output-file eslint_report.json --format json --ext .js,.jsx .",
    "version": "bin/version"
  },
  "devDependencies": {
    "@babel/core": "^7.21.8",
    "@babel/eslint-parser": "^7.21.8",
    "@sveltejs/vite-plugin-svelte": "^2.2.0",
    "eslint": "^8.40.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-svelte3": "^4.0.0",
    "lerna": "^6.6.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.23",
    "postcss-html": "^1.5.0",
    "prettier": "^2.8.8",
    "prettier-plugin-svelte": "^2.10.0",
    "sass": "^1.62.1",
    "stylelint": "^15.6.1",
    "stylelint-config-recommended-scss": "^11.0.0",
    "stylelint-scss": "^5.0.0",
    "svelte": "^3.59.1",
    "svelte-check": "^3.3.2",
    "svelte-i18n": "^3.6.0",
    "svelte-preprocess": "^5.0.3",
    "vite": "^4.3.6"
  },
  "dependencies": {
    "@sveltia/ui": "^0.2.4",
    "@videomark/sparkline": "github:videomark/sparkline",
    "lit-html": "^2.7.4",
    "mpd-parser": "^1.1.1",
    "msgpack-lite": "^0.1.26",
    "uuid": "^9.0.0"
  }
}
